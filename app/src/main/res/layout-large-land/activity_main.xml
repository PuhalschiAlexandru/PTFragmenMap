<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/am_ll_large_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="3">

    <fragment
        android:id="@+id/am_f_large_coordinate_fragment"
        android:name="com.tapptitude.fragmentmapapp.ui.fragment.CoordinatesScreenFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/am_f_large_map_fragment"
        android:name="com.tapptitude.fragmentmapapp.ui.fragment.MapScreenFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

</LinearLayout>